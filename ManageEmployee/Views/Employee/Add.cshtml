@model ManageEmployee.Models.Employee
@{
    ViewData["Title"] = "Add Employee";
}

<h2>Add Employee</h2>

<form asp-action="Add" method="post" class="row g-3">
    <div class="col-md-6">
        <label class="form-label">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">SSN</label>
        <input asp-for="SSN" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">DOB</label>
        <input asp-for="DOB" type="date" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Join Date</label>
        <input asp-for="JoinDate" type="date" class="form-control" />
    </div>

    <div class="col-12">
        <label class="form-label">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="col-md-4">
        <label class="form-label">City</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="col-md-2">
        <label class="form-label">State</label>
        <input asp-for="State" class="form-control" />
    </div>
    <div class="col-md-2">
        <label class="form-label">Zip</label>
        <input asp-for="Zip" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <hr />

    <div class="col-md-6">
        <label class="form-label">Title</label>
        <input name="title" class="form-control" required />
    </div>
    <div class="col-md-6">
        <label class="form-label">Salary</label>
        <input name="salary" type="number" step="0.01" class="form-control" required />
    </div>

    <div class="col-12">
        <button class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
